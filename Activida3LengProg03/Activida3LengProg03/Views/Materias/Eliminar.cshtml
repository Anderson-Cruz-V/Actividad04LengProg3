@model Actividad4LengProg3.Models.Materia

<h2>Eliminar Materia</h2>

<div class="alert alert-warning">
    ¿Eliminar la materia <strong>@Model.Codigo - @Model.Nombre</strong>?
</div>

<form asp-action="Eliminar" method="post">
    <input asp-for="Codigo" type="hidden" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Lista" class="btn btn-secondary">Cancelar</a>
</form>

