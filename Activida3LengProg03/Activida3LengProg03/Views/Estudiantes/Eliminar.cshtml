@model Activida4LengProg3.Models.EstudiantesViewModel

<h2>Eliminar Estudiante</h2>

<div class="alert alert-warning">
    ¿Estás seguro de eliminar al estudiante <strong>@Model.NombreCompleto</strong> con matrícula <strong>@Model.Matricula</strong>?
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" name="matricula" value="@Model.Matricula" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Lista", "Estudiantes")" class="btn btn-secondary">Cancelar</a>
</form>
